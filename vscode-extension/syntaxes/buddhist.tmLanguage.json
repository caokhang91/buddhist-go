{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Buddhist",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.buddhist",
          "match": "//.*"
        },
        {
          "name": "comment.block.buddhist",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.buddhist",
          "match": "\\b(fn|let|const|if|else|then|not|return|for|while|break|continue|spawn|try|catch|finally|throw|import|export|from|class)\\b"
        },
        {
          "name": "constant.language.buddhist",
          "match": "\\b(true|false|null|channel|blob)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.buddhist",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.buddhist",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.buddhist",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.buddhist",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.buddhist",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.buddhist",
          "match": "(==|!=|<=|>=|&&|\\|\\||<-|->|=>|\\+|\\-|\\*|/|%|=|<|>|!|&|\\|)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.buddhist",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.buddhist"
}
